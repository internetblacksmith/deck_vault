<div data-controller="collection-progress set-filter" data-set-filter-url-value="<%= available_sets_card_sets_path %>">
  <!-- Stats Row -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-label">Sets</div>
      <div class="stat-value"><%= @downloaded_sets.count %></div>
    </div>
    <div class="stat-card">
      <div class="stat-label">Total Cards</div>
      <div class="stat-value"><%= @downloaded_sets.sum(&:cards_count) %></div>
    </div>
    <div class="stat-card">
      <div class="stat-label">Owned</div>
      <div class="stat-value stat-value--green"><%= @downloaded_sets.sum(&:owned_cards_count) %></div>
    </div>
  </div>

  <div class="main-grid">
    <!-- Available Sets -->
    <div class="sets-section">
      <div class="section-header">
        <h2 class="section-title">Available Sets</h2>
        <div class="set-count" data-set-filter-target="count">Loading...</div>
      </div>

      <!-- Filter Tabs -->
      <div class="filter-tabs" data-set-filter-target="tabs">
        <button 
          data-action="click->set-filter#filterByStatus"
          data-status="downloaded"
          data-set-filter-target="tab"
          class="filter-tab filter-tab--active">
          Downloaded
        </button>
        <button 
          data-action="click->set-filter#filterByStatus"
          data-status="available"
          data-set-filter-target="tab"
          class="filter-tab">
          Available
        </button>
        <button 
          data-action="click->set-filter#filterByStatus"
          data-status="all"
          data-set-filter-target="tab"
          class="filter-tab">
          All
        </button>
      </div>

      <!-- Search and Sort Controls -->
      <div class="search-controls">
        <input 
          type="text" 
          placeholder="Search sets..." 
          data-set-filter-target="search"
          data-action="input->set-filter#filter"
          class="search-input">
        <select 
          data-set-filter-target="sort"
          data-action="change->set-filter#sort"
          class="sort-select">
          <option value="name-asc">Name A-Z</option>
          <option value="name-desc">Name Z-A</option>
          <option value="date-desc" selected>Newest First</option>
          <option value="date-asc">Oldest First</option>
          <option value="cards-desc">Most Cards</option>
          <option value="cards-asc">Least Cards</option>
          <option value="type-asc">Set Type A-Z</option>
          <option value="type-desc">Set Type Z-A</option>
        </select>
        <select
          data-set-filter-target="typeFilter"
          data-action="change->set-filter#filterByType"
          class="sort-select">
          <option value="">All Types</option>
          <option value="core">Core Sets</option>
          <option value="expansion">Expansions</option>
          <option value="masters">Masters</option>
          <option value="draft_innovation">Draft Innovation</option>
          <option value="commander">Commander</option>
          <option value="planechase">Planechase</option>
          <option value="archenemy">Archenemy</option>
          <option value="box">Box Sets</option>
          <option value="duel_deck">Duel Decks</option>
          <option value="starter">Starter Sets</option>
          <option value="promo">Promos</option>
          <option value="funny">Funny/Un-Sets</option>
          <option value="memorabilia">Memorabilia</option>
        </select>
      </div>

      <div class="sets-list" data-set-filter-target="list">
        <!-- Loader - shown while fetching sets -->
        <div data-set-filter-target="loader" class="loader">
          <div class="loader-text">Loading sets from Scryfall...</div>
          <div class="loader-spinner"></div>
        </div>
      </div>
    </div>

    <!-- My Collection -->
    <div class="collection-section">
      <h2 class="section-title">My Collection</h2>
      
      <!-- Backup/Restore Controls -->
      <div class="backup-controls" data-controller="backup">
        <div class="backup-buttons">
          <a href="<%= export_collection_path %>" class="backup-btn backup-btn--export" title="Download your collection as a JSON backup file. Use this to save your data or transfer to another device.">
            Export Backup
          </a>
          <button type="button" data-action="click->backup#toggleImport" class="backup-btn backup-btn--import" title="Restore collection from a previously exported JSON backup file.">
            Import Backup
          </button>
          <button type="button" data-action="click->backup#toggleDelver" class="backup-btn backup-btn--delver" title="Import cards from Delver Lens CSV exports. Supports adding quantities and tracking foils.">
            Import Delver
          </button>
          <%= button_to "Publish to Showcase", publish_to_gist_path, method: :post, class: "backup-btn backup-btn--publish", title: "Share your collection stats publicly via GitHub Gist for the Showcase website.", data: { turbo_confirm: "Publish your collection to GitHub Gist for the Showcase site?" } %>
        </div>
        <div data-backup-target="importPanel" class="import-panel" style="display:none;">
          <%= form_tag import_collection_path, method: :post, multipart: true, class: "import-form" do %>
            <input type="file" name="backup_files[]" accept=".json" class="import-file-input" multiple>
            <div class="import-actions">
              <%= submit_tag "Restore", class: "backup-btn backup-btn--restore" %>
              <button type="button" data-action="click->backup#toggleImport" class="backup-btn backup-btn--cancel">Cancel</button>
            </div>
            <p class="import-hint">Select one or more previously exported JSON backup files.<br>
            <span style="color:#888;">This will restore your collection quantities and settings from the backup.</span></p>
          <% end %>
        </div>
        <div data-backup-target="delverPanel" class="import-panel" style="display:none;"
             data-controller="delver-import"
             data-delver-import-preview-url-value="<%= preview_delver_csv_path %>"
             data-delver-import-import-url-value="<%= import_delver_csv_path %>">
          <%= form_tag import_delver_csv_path, method: :post, multipart: true, class: "import-form", data: { delver_import_target: "form" } do %>
            <input type="file" name="csv_files[]" accept=".csv" class="import-file-input" multiple data-delver-import-target="fileInput">
            <div class="import-mode-options">
              <label class="import-mode-option">
                <input type="radio" name="import_mode" value="add" checked>
                <span class="import-mode-label">Add to collection</span>
                <span class="import-mode-desc">Adds quantities to existing cards</span>
              </label>
              <label class="import-mode-option">
                <input type="radio" name="import_mode" value="replace">
                <span class="import-mode-label">Replace collection</span>
                <span class="import-mode-desc">Overwrites existing quantities</span>
              </label>
            </div>
            <div class="import-actions">
              <button type="button" class="backup-btn backup-btn--restore" data-action="click->delver-import#preview">Preview Import</button>
              <button type="button" data-action="click->backup#toggleDelver" class="backup-btn backup-btn--cancel">Cancel</button>
            </div>
            <div class="import-hint-box" style="background:#222;border-radius:6px;padding:12px;margin-top:12px;">
              <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:8px;">
                <span style="color:#888;font-size:12px;font-weight:500;">How to Import from Delver Lens</span>
                <button type="button" onclick="this.parentElement.nextElementSibling.style.display=this.parentElement.nextElementSibling.style.display==='none'?'block':'none';this.textContent=this.textContent==='Show'?'Hide':'Show'"
                        style="background:#333;border:1px solid #444;color:#888;padding:2px 8px;border-radius:3px;cursor:pointer;font-size:11px;">Show</button>
              </div>
              <div style="display:none;font-size:12px;color:#999;line-height:1.6;">
                <ol style="margin:0;padding-left:20px;">
                  <li style="margin-bottom:6px;"><strong>In Delver Lens:</strong> Select cards > Export > CSV format</li>
                  <li style="margin-bottom:6px;"><strong>Select files:</strong> Choose one or more CSV files above</li>
                  <li style="margin-bottom:6px;"><strong>Choose mode:</strong>
                    <ul style="margin:4px 0 0 0;padding-left:16px;list-style-type:disc;">
                      <li><em>Add to collection</em> - Adds quantities to existing cards. Marks imported cards with <span style="background:#d4a017;padding:1px 4px;border-radius:2px;font-size:10px;color:#1a1a1a;font-weight:600;">NEW</span> badge</li>
                      <li><em>Replace collection</em> - Overwrites all quantities with CSV values. No NEW badges</li>
                    </ul>
                  </li>
                  <li style="margin-bottom:6px;"><strong>Preview:</strong> Review cards before importing. Missing sets will be auto-downloaded from Scryfall</li>
                  <li><strong>Confirm:</strong> Click "Confirm Import" to add cards to your collection</li>
                </ol>
                <p style="margin:12px 0 0 0;padding-top:8px;border-top:1px solid #333;color:#888;">
                  <strong>Tip:</strong> The <span style="background:#d4a017;padding:1px 4px;border-radius:2px;font-size:10px;color:#1a1a1a;font-weight:600;">NEW</span> badge helps you find newly imported cards in the binder view. Click the badge to mark the card as placed in your physical binder.
                </p>
              </div>
            </div>
          <% end %>

          <!-- Loading Overlay -->
          <div data-delver-import-target="loading" class="preview-loading" style="display:none;">
            <div class="preview-loading-spinner"></div>
            <div class="preview-loading-text">Parsing CSV files...</div>
          </div>

          <!-- Preview Modal -->
          <div data-delver-import-target="modal" class="preview-modal" style="display:none;" data-action="click->delver-import#closeModalOnBackdrop">
            <div data-delver-import-target="modalContent" class="preview-modal-content"></div>
          </div>
        </div>
      </div>
      
      <div class="collection-list">
        <% if @downloaded_sets.any? %>
          <% @downloaded_sets.each do |set| %>
            <div class="collection-item">
              <div class="collection-item-header">
                <div class="collection-item-info">
                  <a href="<%= card_set_path(set) %>" class="collection-item-name"><%= set.name %></a>
                  <div class="collection-item-count">
                    <%= set.owned_cards_count %>/<%= set.cards_count %> owned
                  </div>
                </div>
                <% unless set.downloading? || set.pending? %>
                  <%= button_to card_set_path(set), method: :delete, data: { turbo_confirm: "Delete #{set.name}? This will remove all cards and images." }, class: "delete-btn" do %>
                    <span class="delete-text">Delete</span>
                  <% end %>
                <% end %>
              </div>
              <% if set.downloading? || set.pending? %>
                <div class="progress-container">
                  <div class="progress-bar">
                    <div class="progress-fill" style="width:<%= set.download_progress_percentage %>%;"></div>
                  </div>
                  <div class="progress-text"><%= set.download_progress_percentage %>%</div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state">No sets downloaded yet</div>
        <% end %>
      </div>
    </div>
  </div>
</div>

