    }
  }
  
  /* Extra small screens (iPhone SE, etc) */
  @media (max-width: 380px) {
    .stat-card {
      padding: 10px 6px;
    }
    
    .stat-label {
      font-size: 10px;
    }
    
    .stat-value {
      font-size: 18px;
    }
    
    .filter-tab {
      padding: 8px 2px;
      font-size: 11px;
    }
    
    .set-item-row {
      padding: 8px 10px;
    }
    
    .set-item-name {
      font-size: 13px;
    }
    
    .download-btn {
      padding: 6px 10px;
      font-size: 11px;
    }
  }
</style>
