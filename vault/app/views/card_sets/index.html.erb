    padding: 32px;
    text-align: center;
    color: #666;
  }

  /* Backup Controls */
  .backup-controls {
    margin-bottom: 16px;
  }
  
  .backup-buttons {
    display: flex;
    gap: 8px;
    margin-bottom: 8px;
  }
  
  .backup-btn {
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 13px;
    cursor: pointer;
    text-decoration: none;
    border: none;
    display: inline-block;
