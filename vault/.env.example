# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Environment
RAILS_ENV=development

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=5

# Anthropic API (for Claude Chat feature)
# Get your API key from: https://console.anthropic.com/
# Note: Can also be configured via Settings page in the app (stored encrypted in DB)
ANTHROPIC_API_KEY=

# Claude model for chat (optional, defaults to claude-sonnet-4-20250514)
# Options: claude-sonnet-4-20250514, claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229
# Note: Can also be configured via Settings page in the app
CHAT_MODEL=

# GitHub Gist Publishing (for Showcase integration)
# Create a Personal Access Token with 'gist' scope:
# https://github.com/settings/tokens/new?scopes=gist
GITHUB_TOKEN=

# Set this after your first publish (the app will tell you the ID)
# Leave empty for first-time publish
SHOWCASE_GIST_ID=
