<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header with Back Button -->
  <div class="mb-8">
    <%= link_to "← Back to Collection", card_sets_path, class: "text-purple-400 hover:text-purple-300 transition flex items-center gap-2 mb-6" %>
    
    <div class="flex justify-between items-start gap-8">
      <div class="flex-1">
        <h1 class="text-5xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent mb-2">
          <%= @card_set.name %>
        </h1>
        <div class="flex items-center gap-6 text-purple-300">
          <p class="text-lg">
            <span class="font-semibold text-white"><%= @card_set.code.upcase %></span> 
          </p>
          <% if @card_set.released_at %>
            <p class="text-sm">
              Released <%= @card_set.released_at.strftime("%b %d, %Y") %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-2 gap-4">
        <div class="glass rounded-lg p-4 border border-purple-500/20">
          <p class="text-purple-300 text-sm">Total Cards</p>
          <p class="text-3xl font-bold"><%= @card_set.card_count %></p>
        </div>
        <div class="glass rounded-lg p-4 border border-purple-500/20">
          <p class="text-purple-300 text-sm">Downloaded</p>
          <p class="text-3xl font-bold"><%= @cards.count %></p>
        </div>
        <% owned = @cards.joins(:collection_card).count %>
        <div class="glass rounded-lg p-4 border border-purple-500/20">
          <p class="text-purple-300 text-sm">Owned</p>
          <p class="text-3xl font-bold text-green-400"><%= owned %></p>
        </div>
        <div class="glass rounded-lg p-4 border border-purple-500/20">
          <p class="text-purple-300 text-sm">Completion</p>
          <p class="text-3xl font-bold text-blue-400"><%= @card_set.download_progress_percentage %>%</p>
        </div>
      </div>
    </div>
  </div>

   <!-- Download Progress -->
   <%= turbo_frame_tag "progress-#{@card_set.id}" do %>
     <%= render "card_sets/progress_bar", card_set: @card_set %>
   <% end %>

  <!-- View Type Selector -->
   <div class="flex gap-3 mb-8">
     <% ["table", "grid", "binder"].each do |view| %>
       <% button_class = @view_type == view ? 'gradient-primary text-white shadow-lg shadow-purple-500/50' : 'glass border border-purple-500/20 text-purple-300 hover:border-purple-500/40' %>
       <%= link_to view.capitalize, card_set_path(@card_set, view_type: view), 
           class: "px-6 py-2 rounded-lg font-semibold transition-all duration-200 #{button_class}" %>
     <% end %>
   </div>

   <!-- Table View -->
   <% if @view_type == "table" %>
     <div class="glass rounded-lg border border-purple-500/20 overflow-hidden">
       <table class="w-full">
         <thead class="bg-purple-900/50 border-b border-purple-500/20 sticky top-0">
           <tr>
             <th class="px-6 py-4 text-left font-semibold text-purple-300 text-sm">Card Name</th>
             <th class="px-6 py-4 text-left font-semibold text-purple-300 text-sm">Type</th>
             <th class="px-6 py-4 text-left font-semibold text-purple-300 text-sm">Rarity</th>
             <th class="px-6 py-4 text-left font-semibold text-purple-300 text-sm">Qty</th>
             <th class="px-6 py-4 text-left font-semibold text-purple-300 text-sm">Page</th>
             <th class="px-6 py-4 text-left font-semibold text-purple-300 text-sm">Notes</th>
           </tr>
         </thead>
         <tbody class="divide-y divide-purple-500/20">
           <% @cards.each do |card| %>
             <%= turbo_frame_tag "card-row-#{card.id}" do %>
               <%= render "card_sets/card_row", card: card, view_type: @view_type, card_set: @card_set %>
             <% end %>
           <% end %>
         </tbody>
       </table>
     </div>

  <!-- Grid View -->
  <% elsif @view_type == "grid" %>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
      <% @cards.each do |card| %>
        <div class="group relative overflow-hidden rounded-lg border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300 glass p-2 hover:shadow-lg hover:shadow-purple-500/20" data-card-id="<%= card.id %>">
          <!-- Card Image -->
          <div class="relative overflow-hidden rounded mb-2">
            <% if card.image_path %>
              <img src="/<%= card.image_path %>" alt="<%= card.name %>" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300" onerror="this.style.display='none'">
            <% elsif card.image_uris %>
              <% image_data = JSON.parse(card.image_uris) %>
              <% if image_data['normal'] %>
                <img src="<%= image_data['normal'] %>" alt="<%= card.name %>" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300">
              <% end %>
            <% end %>
          </div>

          <!-- Card Info -->
          <div class="space-y-2">
            <p class="font-bold text-sm text-white truncate group-hover:text-purple-300 transition"><%= card.name %></p>
            <p class="text-xs text-purple-400"><%= card.collector_number %></p>
            
            <div class="space-y-1">
              <input type="number" min="0" class="quantity-input w-full bg-purple-900/50 border border-purple-500/20 text-white px-2 py-1 text-xs rounded text-center" 
                     value="<%= card.collection_card&.quantity || 0 %>" 
                     placeholder="Qty">
              <input type="number" min="1" max="200" class="page-input w-full bg-purple-900/50 border border-purple-500/20 text-white px-2 py-1 text-xs rounded text-center" 
                     value="<%= card.collection_card&.page_number || '' %>" 
                     placeholder="Page #">
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <!-- Binder Pages View -->
  <% elsif @view_type == "binder" %>
    <div class="space-y-8">
      <% grouped_cards = @cards.includes(:collection_card).group_by { |c| c.collection_card&.page_number || 0 }.sort %>
      <% grouped_cards.each do |page, cards| %>
        <div class="glass rounded-lg border border-purple-500/20 p-6">
          <h3 class="text-2xl font-bold mb-6">
            <% if page == 0 %>
              <span class="text-yellow-400">⚠️ Not Yet Placed</span>
            <% else %>
              <span class="text-purple-300">Page <%= page %></span>
            <% end %>
            <span class="text-sm font-normal text-purple-400 ml-3">(<%= cards.count %> cards)</span>
          </h3>
          <div class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-6 gap-4">
            <% cards.each do |card| %>
              <div class="group relative overflow-hidden rounded-lg border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/20" data-card-id="<%= card.id %>">
                <% if card.image_path %>
                  <img src="/<%= card.image_path %>" alt="<%= card.name %>" class="w-full h-auto group-hover:scale-110 transition-transform duration-300" onerror="this.style.display='none'">
                <% elsif card.image_uris %>
                  <% image_data = JSON.parse(card.image_uris) %>
                  <% if image_data['normal'] %>
                    <img src="<%= image_data['normal'] %>" alt="<%= card.name %>" class="w-full h-auto group-hover:scale-110 transition-transform duration-300">
                  <% end %>
                <% end %>
                
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-all duration-300 flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-center">
                    <p class="text-white font-bold text-xs mb-1"><%= card.name %></p>
                    <% if card.collection_card&.quantity && card.collection_card.quantity > 0 %>
                      <p class="text-green-400 text-xs font-semibold">Qty: <%= card.collection_card.quantity %></p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<!-- ActionCable real-time progress updates -->
<div data-controller="set-progress" 
     data-set-progress-set-id-value="<%= @card_set.id %>"
     data-set-progress-is-downloading-value="<%= @card_set.downloading? || @card_set.pending? %>"></div>



<style>
  .rarity-common {
    @apply bg-gray-500/30 text-gray-300;
  }

  .rarity-uncommon {
    @apply bg-blue-500/30 text-blue-300;
  }

  .rarity-rare {
    @apply bg-yellow-500/30 text-yellow-300;
  }

  .rarity-mythic {
    @apply bg-orange-500/30 text-orange-300;
  }
</style>
