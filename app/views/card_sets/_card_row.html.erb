<tr class="hover:bg-purple-500/10 transition" data-card-id="<%= card.id %>">
  <td class="px-6 py-4">
    <div>
      <p class="font-semibold text-white"><%= card.name %></p>
      <p class="text-xs text-purple-400"><%= card.collector_number %></p>
    </div>
  </td>
  <td class="px-6 py-4 text-sm text-purple-300"><%= card.type_line %></td>
  <td class="px-6 py-4">
    <span class="px-3 py-1 rounded-full text-xs font-semibold <%= rarity_class(card.rarity) %>">
      <%= card.rarity&.upcase || "N/A" %>
    </span>
  </td>
  <td class="px-6 py-4">
    <input type="number" min="0" class="quantity-input bg-purple-900/50 border border-purple-500/20 text-white px-3 py-1 rounded w-16 text-center" 
           value="<%= card.collection_card&.quantity || 0 %>" 
           data-card-id="<%= card.id %>">
  </td>
  <td class="px-6 py-4">
    <input type="number" min="1" max="200" class="page-input bg-purple-900/50 border border-purple-500/20 text-white px-3 py-1 rounded w-16 text-center" 
           value="<%= card.collection_card&.page_number || '' %>" 
           placeholder="â€”"
           data-card-id="<%= card.id %>">
  </td>
  <td class="px-6 py-4">
    <input type="text" class="notes-input bg-purple-900/50 border border-purple-500/20 text-white px-3 py-1 rounded w-full text-sm" 
           value="<%= card.collection_card&.notes || '' %>" 
           placeholder="Add notes..."
           data-card-id="<%= card.id %>">
  </td>
</tr>
