<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12" data-controller="collection-progress">
  <!-- Header -->
  <div class="mb-12">
    <h1 class="text-5xl font-bold bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent mb-2">
      Build Your Collection
    </h1>
    <p class="text-purple-300 text-lg">Download Magic sets and track your cards in one place</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Available Sets Section -->
    <div class="lg:col-span-2">
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-6 flex items-center">
          <span class="w-1 h-8 bg-gradient-accent rounded mr-3"></span>
          Available Sets
        </h2>
        
        <% if @available_sets.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-h-96 overflow-y-auto pr-2">
            <% @available_sets.each do |set| %>
              <% downloaded = @downloaded_sets.find_by(code: set[:code]) %>
              <div class="group relative overflow-hidden rounded-lg border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300 p-4 glass hover:shadow-lg hover:shadow-purple-500/20">
                <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 opacity-0 group-hover:opacity-5 transition-opacity duration-300"></div>
                
                <div class="relative z-10">
                  <div class="flex justify-between items-start mb-3">
                    <div class="flex-1">
                      <h3 class="font-bold text-white text-sm group-hover:text-purple-300 transition">
                        <%= set[:name] %>
                      </h3>
                      <p class="text-xs text-purple-300 mt-1">
                        <%= set[:code].upcase %> ‚Ä¢ <%= set[:card_count] %> cards
                      </p>
                    </div>
                    <% if downloaded %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-300">
                        ‚úì Downloaded
                      </span>
                    <% end %>
                  </div>
                  
                  <% unless downloaded %>
                    <%= button_to "Download", download_set_card_sets_path(set_code: set[:code]), 
                        method: :post, 
                        class: "w-full mt-3 px-3 py-2 text-sm font-semibold rounded-lg gradient-accent text-white hover:shadow-lg transition-all duration-200 group-hover:scale-105 transform" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-purple-300 text-lg animate-pulse">Loading available sets...</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- My Collection Section -->
    <div class="lg:col-span-1">
      <div>
        <h2 class="text-2xl font-bold mb-6 flex items-center">
          <span class="w-1 h-8 bg-gradient-primary rounded mr-3"></span>
          My Collection
        </h2>
        
        <% if @downloaded_sets.any? %>
          <div class="space-y-4 max-h-96 overflow-y-auto pr-2">
            <% @downloaded_sets.each do |set| %>
              <div class="group rounded-lg border border-purple-500/20 hover:border-purple-500/40 transition-all duration-300 p-4 glass">
                <div class="flex justify-between items-start mb-2">
                  <div class="flex-1">
                    <h3 class="font-bold text-white group-hover:text-purple-300 transition">
                      <%= link_to set.name, card_set_path(set), class: "hover:underline" %>
                    </h3>
                    <div class="text-xs text-purple-300 mt-1">
                      <p><%= set.cards.count %> / <%= set.card_count %> cards</p>
                      <% owned = set.cards.joins(:collection_card).count %>
                      <% if owned > 0 %>
                        <p class="text-green-300 font-semibold">Owned: <%= owned %></p>
                      <% end %>
                    </div>
                  </div>
                </div>
                
                <!-- Progress Bar with Real-time Updates -->
                <% if set.downloading? || set.pending? %>
                  <div class="mt-3 space-y-1">
                    <div class="flex justify-between text-xs">
                      <span class="text-blue-300 font-semibold animate-pulse">
                        <% if set.downloading? %>
                          ‚öôÔ∏è Downloading...
                        <% else %>
                          ‚è≥ Pending
                        <% end %>
                      </span>
                      <span class="text-purple-300"><%= set.images_downloaded %>/<%= set.card_count %></span>
                    </div>
                    <div class="w-full bg-purple-900/50 rounded-full h-2 overflow-hidden border border-purple-500/20">
                      <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-full rounded-full transition-all duration-500" 
                           style="width: <%= set.download_progress_percentage %>%; min-width: 2px;"
                           data-set-id="<%= set.id %>"></div>
                    </div>
                  </div>
                <% elsif set.completed? %>
                  <div class="mt-3 inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-500/20 text-green-300">
                    ‚úì All images ready
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 border border-dashed border-purple-500/20 rounded-lg">
            <p class="text-purple-300 text-sm">üëá Download a set to get started</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


