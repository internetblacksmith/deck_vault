<% content_for :page_title, "Sign In" %>

<div class="space-y-6">
  <div>
    <h3 class="text-lg font-semibold text-slate-900">Welcome back</h3>
    <p class="mt-1 text-sm text-slate-600">Sign in to your account to manage your collection</p>
  </div>

  <form class="space-y-4" action="<%= login_path %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <!-- Email Field -->
    <div>
      <label for="email" class="block text-sm font-medium text-slate-700 mb-2">Email address</label>
      <input 
        id="email" 
        name="email" 
        type="email" 
        autocomplete="email" 
        required 
        placeholder="you@example.com"
        class="w-full px-4 py-2 border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
    </div>

    <!-- Password Field -->
    <div>
      <label for="password" class="block text-sm font-medium text-slate-700 mb-2">Password</label>
      <input 
        id="password" 
        name="password" 
        type="password" 
        autocomplete="current-password" 
        required 
        placeholder="••••••••"
        class="w-full px-4 py-2 border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
    </div>

    <!-- Submit Button -->
    <button 
      type="submit" 
      class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition">
      Sign in
    </button>
  </form>

  <!-- Sign Up Link -->
  <div class="text-center">
    <p class="text-sm text-slate-600">
      Don't have an account?
      <%= link_to "Create one", sign_up_path, class: "font-semibold text-blue-600 hover:text-blue-700" %>
    </p>
  </div>
</div>
