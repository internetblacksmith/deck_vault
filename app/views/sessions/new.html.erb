<div style="max-width:360px;margin:80px auto;">
  <h1 style="font-size:24px;font-weight:600;margin-bottom:8px;color:#fff;">Sign in</h1>
  <p style="color:#888;margin-bottom:24px;">Welcome back to MTG Collector</p>

  <form action="<%= login_path %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div style="margin-bottom:16px;">
      <label style="display:block;color:#aaa;font-size:14px;margin-bottom:6px;">Username</label>
      <input type="text" name="username" required autofocus style="width:100%;background:#222;color:#eee;border:1px solid #444;padding:10px 12px;border-radius:4px;">
    </div>

    <div style="margin-bottom:24px;">
      <label style="display:block;color:#aaa;font-size:14px;margin-bottom:6px;">Password</label>
      <input type="password" name="password" required style="width:100%;background:#222;color:#eee;border:1px solid #444;padding:10px 12px;border-radius:4px;">
    </div>

    <button type="submit" style="width:100%;background:#29f;color:#fff;border:none;padding:12px;border-radius:4px;font-weight:500;cursor:pointer;">
      Sign in
    </button>
  </form>

  <p style="text-align:center;margin-top:24px;color:#888;">
    No account? <a href="<%= sign_up_path %>" style="color:#6cf;">Sign up</a>
  </p>
</div>
