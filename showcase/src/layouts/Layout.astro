---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'My Magic: The Gathering Collection' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | MTG Collection</title>
  </head>
  <body class="min-h-screen bg-[#0a0a0a]">
    <!-- Header -->
    <header class="bg-[#1a1a1a] border-b border-[#333] sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-white hover:text-[#29f] transition-colors">
            MTG Collection
          </a>
          <nav class="flex gap-2">
            <a 
              href="/" 
              class:list={[
                "nav-link",
                { "active": currentPath === "/" }
              ]}
            >
              Dashboard
            </a>
            <a 
              href="/sets" 
              class:list={[
                "nav-link",
                { "active": currentPath.startsWith("/sets") }
              ]}
            >
              Sets
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-[#1a1a1a] border-t border-[#333] mt-auto py-6">
      <div class="max-w-7xl mx-auto px-4 text-center text-[#666] text-sm">
        <p>Card images and data from <a href="https://scryfall.com" class="text-[#29f] hover:underline" target="_blank" rel="noopener">Scryfall</a></p>
      </div>
    </footer>
  </body>
</html>
