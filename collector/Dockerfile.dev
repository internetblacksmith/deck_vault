# Development Dockerfile for MTG Collector
# Optimized for local development on any platform (Windows, Mac, Linux)

ARG RUBY_VERSION=3.4.1
FROM docker.io/library/ruby:$RUBY_VERSION-slim

# Rails app lives here
WORKDIR /rails

# Install packages needed for development
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    curl \
    git \
    libyaml-dev \
    libvips \
    pkg-config \
    sqlite3 \
    libsqlite3-dev \
    nodejs \
    npm && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Install bundler
RUN gem install bundler

# Set development environment
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle"

# Create a non-root user for development
RUN groupadd --system --gid 1000 rails && \
    useradd rails --uid 1000 --gid 1000 --create-home --shell /bin/bash && \
    mkdir -p /rails/storage /rails/tmp /rails/log && \
    chown -R rails:rails /rails

# Copy Gemfile first for better caching
COPY --chown=rails:rails Gemfile Gemfile.lock ./

# Install gems
RUN bundle install

# Copy the rest of the application
COPY --chown=rails:rails . .

# Ensure storage directories exist with correct permissions
RUN mkdir -p storage tmp/pids tmp/cache tmp/sockets log && \
    chown -R rails:rails storage tmp log

USER rails

# Expose port 3000
EXPOSE 3000

# Use entrypoint to prepare database before starting
ENTRYPOINT ["./bin/docker-entrypoint"]

# Default command - can be overridden in docker-compose
CMD ["./bin/rails", "server", "-b", "0.0.0.0"]
